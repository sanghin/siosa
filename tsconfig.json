{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "importHelpers": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "Components/*": ["./components/*"],
      "Pages/*": ["./pages/*"],
      "TestData/*": ["./tests/test-data/*"],
      "Test/*": ["./tests/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules", "server/**"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "siosa.d.ts"]
}
